@page
@model SangaghakRazorEndPoint.Areas.Expert.Pages.PostOfferForRequestModel
@{
}

@using SangaghakRazorEndPoint
@namespace SangaghakRazorEndPoint.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="row">
    <!--شروع قسمت جزئیات درخواست-->
    <div class="col-xl-3 col-lg-4">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">جزئیات درخواست</h4>
            </div>
            <div class="card-body">
                <img src="/images/product/p-1.png" alt="" class="img-fluid rounded bg-light">
                <div class="mt-3">
                    <h4>
                        @Model.WantedRequest.ServicePackageTiltle <span class="fs-14 text-muted ms-1">
                            (عنوان پکیج)
                        </span>
                    </h4>
                    <h5 class="text-dark fw-medium mt-3">توضیحات درخواست</h5>
                    <h4 class="fw-semibold text-dark mt-2 d-flex align-items-center gap-2">
                        @Model.WantedRequest.Description
                    </h4>
                    <div class="mt-3">
                        <h5 class="text-dark fw-medium">آدرس</h5>
                        <h4 class="fw-semibold text-dark mt-2 d-flex align-items-center gap-2">
                            @Model.WantedRequest.Address
                        </h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--پایان قسمت جزئیات درخواست-->
    <!--شروع قسمت توضیحات پیشنهاد و تاریخ-->
    <div class="col-xl-9 col-lg-8">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">اطلاعات پیشنهاد</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="mb-3">
                                <label for="description" class="form-label">توضیحات</label>
                                <textarea asp-for="@Model.Description" class="form-control bg-light-subtle" id="description" rows="7" placeholder="توضیحات کوتاه در مورد پیشنهاد" required></textarea>
                                <span asp-validation-for="@Model.Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="mb-3">
                                <label for="offer-date" class="form-label">تاریخ پیشنهاد</label>
                                <input type="date" asp-for="@Model.OfferedTime" class="form-control" id="offer-date" placeholder="تاریخ را انتخاب کنید" required>
                                <span asp-validation-for="@Model.OfferedTime" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--پایان قسمت جزئیات پیشنهاد-->
            <!--شروع قسمت قیمت‌گذاری-->
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">جزئیات قیمت‌گذاری</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <label for="product-price" class="form-label">قیمت پیشنهادی</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text fs-20"><i class='bx bx-dollar'></i></span>
                                <input type="number" asp-for="@Model.Price" id="product-price" class="form-control" placeholder="000" required>
                                <span asp-validation-for="ProductPrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <label for="product-tex" class="form-label">قیمت اولیه این پکیج</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text fs-20"><i class='bx bxs-file-txt'></i></span>
                                <input type="number" readonly id="product-tex" class="form-control" placeholder="000" value="@Model.WantedRequest.WantedPrice">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--پایان قسمت قیمت‌گذاری-->
            <!--شروع قسمت دکمه‌های صفحه-->
            <div class="p-3 bg-light mb-3 rounded">
                <div class="row justify-content-end g-2">
                    <div class="col-lg-2">
                        <button type="submit" class="btn btn-primary w-100">ذخیره</button>
                    </div>
                </div>
            </div>
            <!--پایان قسمت دکمه‌های صفحه-->
        </form>
    </div>
</div>