@page
@model SangaghakRazorEndPoint.Areas.Expert.Pages.SeeAllExpertOffersModel
@{
}

@using SangaghakRazorEndPoint
@namespace SangaghakRazorEndPoint.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="d-flex card-header justify-content-between align-items-center">
                <div>
                    <h4 class="card-title">تمام لیست پیشنهادهای ثبت‌شده توسط شما</h4>
                </div>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table align-middle mb-0 table-hover table-centered">
                        <thead class="bg-light-subtle">
                            <tr>
                                <th>تاریخ ایجاد</th>
                                <th>عنوان پکیج</th>
                                <th>مشاهده درخواست</th>
                                <th>قیمت پیشنهادی</th>
                                <th>تاریخ پیشنهادی</th>
                                <th>توضیحات پیشنهاد</th>
                                <th>وضعیت پیشنهاد</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.AllExpertsOffer != null)
                            {
                                @foreach (var offer in Model.AllExpertsOffer)
                                {
                                    <tr>
                                        <td>@offer.SetAt</td>
                                        <td>@offer.PackageTitle</td>
                                        <td>
                                            <a asp-page="RequestDetails" asp-rout-RequestId="@offer.RequestId" class="btn btn-light btn-sm">
                                                <iconify-icon icon="solar:eye-broken" class="align-middle fs-18"></iconify-icon>
                                            </a>
                                        </td>
                                        <td>@offer.OfferedPrice</td>
                                        <td>@offer.OfferedTime</td>
                                        <td>@offer.Description</td>
                                        <td>
                                            @{
                                                string badgeClass = offer.Status switch
                                                {
                                                    OfferStatusEnum.Pending => "bg-warning-subtle text-warning",
                                                    OfferStatusEnum.Accepted => "bg-success-subtle text-success",
                                                    OfferStatusEnum.Rejected => "bg-danger-subtle text-danger",
                                                    _ => "bg-light text-dark" // پیش‌فرض
                                                };
                                                string statusText = offer.Status switch
                                                {
                                                    OfferStatusEnum.Pending => "در حال بررسی",
                                                    OfferStatusEnum.Accepted => "تأیید شده",
                                                    OfferStatusEnum.Rejected => "رد شده",
                                                    _ => "نامشخص"
                                                };
                                            }
                                            <span class="badge @badgeClass px-2 py-1 fs-13">
                                                @statusText
                                            </span>
                                        </td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a asp-page-handler="Delete" asp-route-offerId="@offer.Id" class="btn btn-soft-danger btn-sm"><iconify-icon icon="solar:trash-bin-minimalistic-2-broken" class="align-middle fs-18"></iconify-icon></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center">هیچ پیشنهادی یافت نشد.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- end table-responsive -->
            </div>
        </div>
    </div>
</div>










