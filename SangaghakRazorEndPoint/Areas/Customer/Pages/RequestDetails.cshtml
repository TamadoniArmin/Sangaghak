                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">پیشنهادهای ثبت‌شده برای این درخواست</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table align-middle mb-0 table-hover table-centered">
                                <thead class="bg-light-subtle border-bottom">
                                    <tr>
                                        <th>کارشناس</th>
                                        <th>قیمت پیشنهادی</th>
                                        <th>متن</th>
                                        <th>وضعیت</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Offers != null && Model.Offers.Any())
                                    {
                                        @foreach (var offer in Model.Offers)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center gap-2">
                                                        <div class="rounded bg-light avatar-md d-flex align-items-center justify-content-center">
                                                            <img src="/images/product/p-1.png" alt="" class="avatar-md">
                                                        </div>
                                                        <div>
                                                            <a href="#!" class="text-dark fw-medium fs-15">
                                                                تی‌شرت مردانه مشکی سایز اسلیم فیت
                                                            </a>
                                                            <p class="text-muted mb-0 mt-1 fs-13">
                                                                <span>کارشناس</span>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>@offer.OfferedPrice</td>
                                                <td>@offer.Description</td>
                                                <td>
                                                    @if (offer.Status == OfferStatusEnum.Pending)
                                                    {
                                                        <div class="d-flex gap-2">
                                                            <a href="#!" class="btn btn-success btn-sm">
                                                                <iconify-icon icon="solar:check-circle-bold" class="align-middle fs-18 text-white"></iconify-icon>
                                                            </a>
                                                            <a href="#!" class="btn btn-danger btn-sm">
                                                                <iconify-icon icon="solar:close-circle-bold" class="align-middle fs-18 text-white"></iconify-icon>
                                                            </a>
                                                        </div>
                                                    }
                                                    else if (offer.Status == OfferStatusEnum.Accepted)
                                                    {
                                                        <span class="badge border border-success text-success bg-transparent px-2 py-1 fs-13">
                                                            قبول شده
                                                        </span>
                                                    }
                                                    else if (offer.Status == OfferStatusEnum.Rejected)
                                                    {
                                                        <span class="badge border border-secondary text-secondary bg-transparent px-2 py-1 fs-13">
                                                            رد شده
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-light text-dark px-2 py-1 fs-13">
                                                            نامشخص
                                                        </span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center">هیچ پیشنهادی برای درخواست شما یافت نشد.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
            </div>
